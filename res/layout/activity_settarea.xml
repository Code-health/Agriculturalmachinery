<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#33ffffff" >

        <ImageView
            android:id="@+id/bank"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:padding="18dp"
            android:src="@drawable/backss" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="深松作业目标作业面积"
            android:textColor="#585858"
            android:textSize="19sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="#66ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imag_password"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/password"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp" >

            <TextView
                android:id="@+id/meass"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="深松作业目标作业面积"
                android:textColor="#585858" />

            <TextView
                android:id="@+id/ti"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:text="输入超出条件范围"
                android:textColor="#ff2424"
                android:visibility="gone" />
        </LinearLayout>

        <EditText
            android:id="@+id/marea"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:background="#00ffffff"
            android:hint="请输入目标作业面积(不能超过1千万亩)"
            android:password="false"
            android:textColor="#77000000"
            android:textColorHint="#c9d0d6"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/trues"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="确认"
        android:textColor="#c0e4e1"
        android:textSize="18sp" />

</LinearLayout>