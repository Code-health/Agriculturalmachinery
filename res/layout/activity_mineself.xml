<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55C0C0C0"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/logbank"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4" >

            <ImageView
                android:id="@+id/bank"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:paddingLeft="25dp"
                android:paddingTop="13dp"
                android:src="@drawable/bankleft" />

            <TextView
                android:id="@+id/buildname"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="版本:1.4.5"
                android:textSize="12sp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/build"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="21dp"
                android:layout_marginTop="21dp"
                android:text="Build:10"
                android:textSize="12sp"
                android:textColor="#ffffff" />
           
        </RelativeLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2.5"
            android:background="@drawable/minepbankground"
            android:src="@drawable/touxiang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="张军平"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFFF0"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="18dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/imag_address"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/minehezshe" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/imag_address"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="辽宁省林源合作社"
                android:textColor="#555555" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#44666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp" >

            <ImageView
                android:id="@+id/imag_password"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/password" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/imag_password"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="********"
                android:textColor="#555555" />

            <ImageView
                android:id="@+id/change"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/xiugei" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#44666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp" >

            <ImageView
                android:id="@+id/imag_carid"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/carid" />

            <TextView
                android:id="@+id/carid"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/imag_carid"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="辽N190091"
                android:textColor="#555555" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/farmcarinfor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imag_0"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/suiyi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/imag_0"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="农机/机具信息"
                android:textColor="#555555" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#44666666" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/togethinfor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imag_1"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/xinxi2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/imag_1"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="合作社信息"
                android:textColor="#555555" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-20dp"
            android:background="#55C0C0C0"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/xinxiceshi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/i"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/xinxi2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/i"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="数据信息测试"
                android:textColor="#555555" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-20dp"
            android:background="#55C0C0C0" />

        <RelativeLayout
            android:id="@+id/not"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp" >

            <ImageView
                android:id="@+id/n"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/xinxi2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/n"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="报警信息"
                android:textColor="#555555" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-20dp"
            android:background="#55C0C0C0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp" >

            <ImageView
                android:id="@+id/imag_2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/text_2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/imag_2"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="联系客服:"
                android:textColor="#555555" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/gouout"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#d568cc"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/buttonbankgroundyuan"
        android:padding="15dp"
        android:src="@drawable/zhuxiao"
        android:visibility="gone" />

</LinearLayout>