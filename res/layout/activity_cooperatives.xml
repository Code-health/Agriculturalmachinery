<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <io.jchat.android.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listView_tractorlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_layout"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:clipChildren="false"
        android:divider="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:smoothScrollbar="true" />

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_top" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/img_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="农机号"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/card_layout"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/name_tv"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bg" >

            <LinearLayout
                android:id="@+id/top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/usr_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="用户性名:"
                    android:textColor="#222328"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/carID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CARID"
                    android:textColor="#222328"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/top1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/split_line" />

            <LinearLayout
                android:id="@+id/asdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                
                <TextView
                    android:id="@+id/avedepth_tv0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="所属合作社:"
                    android:textColor="#222328"
                    android:textSize="14dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_img1"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_below="@+id/top1"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/icon_01"
                android:visibility="gone" />

            <View
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/asdf"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/split_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/line1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/totle_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="总作业面积"
                    android:textColor="#222328"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/qualified_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="shengdu"
                    android:textColor="#222328"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/percentage_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.550%"
                    android:textColor="#3b55e7"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_img2"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_below="@+id/line2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/icon_02"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/zhuxiao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/card_layout"
            android:layout_alignTop="@+id/name_tv"
            android:text="注销"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>