<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/imag_bank"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/shuax" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="农机作业监测"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/hzsh_lists"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:src="@drawable/ssss" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clipChildren="false"
        android:background="@drawable/logbank" >

        <TextView
            android:id="@+id/username1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="未知用户"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/coopname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/username1"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="辽宁合作社未知"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="2017-3-1"
            android:textColor="#000000"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:id="@+id/horsview"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp"
            android:layout_marginBottom="-5dp"
            android:scrollbars="none"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clipChildren="false" >

                <RelativeLayout
                    android:id="@+id/work5"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" 
                    android:clipChildren="false">

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:text="深松作业"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/workv5"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/tv5"
                        android:layout_height="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#ffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/work6"
                    android:layout_width="1dp"
                    android:layout_toRightOf="@id/work5"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="深松作业"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/workv6"
                        android:layout_width="wrap_content"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/work7"
                    android:layout_width="1dp"
                    android:layout_toRightOf="@id/work6"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="深松作业"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/workv7"
                        android:layout_width="wrap_content"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/work8"
                    android:layout_width="1dp"
                    android:layout_toRightOf="@id/work7"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="深松作业"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/workv8"
                        android:layout_width="wrap_content"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/work9"
                    android:layout_width="1dp"
                    android:layout_toRightOf="@id/work8"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="深松作业"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/workv9"
                        android:layout_width="wrap_content"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff" />
                </RelativeLayout>
            </RelativeLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/linwork"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <RelativeLayout
                android:id="@+id/work1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="深松作业"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/workv1"
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="秸秆还田"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/workv2"
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#00ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="免耕播种"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/workv3"
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#00ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="水田深翻"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/workv4"
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#00ffffff" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#51d3c2" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="作业总面积"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/allmianji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#d568cc" >

            <TextView
                android:id="@+id/hgl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="作业合格率"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hegelu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#d568cc" >

            <TextView
                android:id="@+id/zuoysh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="平均作业深度"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pinjunsh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#51d3c2" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="农机台数"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/njshu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/list_farm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>