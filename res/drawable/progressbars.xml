<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >  
  
    <item android:id="@android:id/background">  
  
        <shape>  
  
            <corners android:radius="2dip" />  
  
            <gradient  
                android:angle="0"  
                android:centerColor="#d6dae9"  
                android:centerY="0.75"  
                android:endColor="#d6dae9"  
                android:startColor="#d6dae9" />  
        </shape>  
    </item>  
  
    <item android:id="@android:id/secondaryProgress">  
  
        <clip>  
  
            <shape>  
  
                <corners android:radius="2dip" />  
  
                <gradient  
                    android:angle="0"  
                    android:centerColor="#d6dae9"  
                    android:centerY="0.75"  
                    android:endColor="#d6dae9"  
                    android:startColor="#d6dae9" />  
            </shape>  
        </clip>  
    </item>  
  
    <item android:id="@android:id/progress">  
  
        <clip>  
  
            <shape>  
  
                <corners android:radius="2dip" />  
  
                <gradient  
                    android:angle="0"  
                    android:endColor="#ff8227"  
                    android:startColor="#ff8227" />  
            </shape>  
        </clip>  
    </item>  
  
</layer-list> 
